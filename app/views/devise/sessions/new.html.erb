
<div class="row top">
	<div class="col-md-4 form-horizontal">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(
	resource_name), html: {class: "well"}) do |f| %>
  		
  	<fieldset class="sup">
  		<legend>Sign In</legend>
 	  		<%= f.input :email %>
 	  		<%= f.input :password %>
 	  	
 	  </fieldset>
		<% if devise_mapping.rememberable? -%>
    	<div><%= f.input :remember_me, as: :boolean %></div>
  		<% end -%>

  		<div><%= f.button :submit, "Sign in" %></div>
		<% end %>
  		<%= render "devise/shared/links" %>
  </div>

  <div class="col-md-8 easy">
	<h2>Signing in is easy and Secure</h2>
  </div>
</div>