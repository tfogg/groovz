<div class="col-md-4 form-horizontal well">
  
  <div class="sup">
  	<%= simple_form_for(@show, url: {action: "create"}, html: {class:"form-horizontal"}) do |f| %>
      <%= f.input :user_id, collection: User.all, label_method: :full_name %>
      <%= f.input :content %>
      <%= f.input :start_time %>
      <%= f.input :maxprice %>
      <div class="form-action">
      <%= f.button :submit %>
      </div>
    <% end %>
  </div>
</div>