<div class="col-md-4 form-horizontal">
  	<%= simple_form_for(@show, url: {action: "create"}, html: {class: "well"}) do |f| %>
      <fieldset class="sup">
        <legend>Create a show</legend>
        <%= f.input :user_id, collection: User.all, label_method: :full_name %>
        <%= f.input :content %>
        <%= f.input :start_time %>
        <%= f.input :maxprice %>
      </fieldset>
      <div class="form-action">
      <%= f.button :submit %>
      </div>
    <% end %>
</div>
