<div class="global_feed">
  <div class="form-group search">
    <h1>Search artists, venues, shows and statuses</h1>
    <input type="text" class="form-control" placeholder="Search">

  </div>

  <div class="display ">
      <% @statuses.each do |status| %>
        <div class="user">
          <div class="profile_pic">
              <%= link_to (image_tag('profile_pic.jpg')), profile_path(status.user) %>
          </div>
          <div class ="post_content">
            <strong><%= status.user.full_name %></strong>
            <p><%= status.content %></p>
            <% if status.post && status.post.attachment? %>
              <span class= "label label-primary">
                <%= status_post_link (status) %>
              </span>
            <% end %>
            <div class="meta"> 
              <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
              <span class="admin">
                <%= link_to 'Edit', edit_status_path(status) %>
                <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %>
              </span>
            </div>
          </div>
        </div>
      <% end %>
      <% @shows.each do |show| %>
      <div class="user"> 
          <div class="profile_pic">
              <%= link_to (image_tag('profile_pic.jpg')), profile_path(show.user) %>
          </div>
          <div class ="post_content">

              <h2><%= show.user.full_name %></h2>
              <p><%= show.content %></p>
              <strong>$<%= show.maxprice %>    </strong>
          </div>
        

        <button class="btn btn-primary"><%= link_to "Bid", new_bid_path %></button>
        

      </div> 



    <% end %>
    <%- @users.each do |user| %>
        <div class="user">
          <div class="profile_pic">
            <%= link_to (image_tag('profile_pic.jpg')), profile_path(user) %>
          </div>
          <div class="post_content">
              <strong><%= link_to user.full_name %></strong>
              <p><%= user.role %></p>
            </div>


        </div>

    <% end %>
  </div>

</div>